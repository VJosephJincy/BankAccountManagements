@model List<BankAccountManagements.Models.InterestRate>
@{
    ViewBag.Title = "Configure Interest Rates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Configure Interest Rates</h2>
<form method="post" action="@Url.Action("UpdateInterestRates", "Bank")">
    <table class="table">
        <thead>
            <tr>
                <th>Credit Min</th>
                <th>Credit Max</th>
                <th>Duration (Years)</th>
                <th>Interest Rate (%)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
<tr>
    <td>
        <input type="number" name="interestRates[@i].CreditMin" value="@Model[i].CreditMin" class="form-control" />
    </td>
    <td>
        <input type="number" name="interestRates[@i].CreditMax" value="@Model[i].CreditMax" class="form-control" />
    </td>
    <td>
        <input type="number" name="interestRates[@i].Duration" value="@Model[i].Duration" class="form-control" />
    </td>
    <td>
        <input type="number" step="0.01" name="interestRates[@i].Rate" value="@Model[i].Rate" class="form-control" />
    </td>
</tr>            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>